<!-- loginResult.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Result</title>
    <style>
        body {
            background-color: #F2EFE5;
            font-family: Constantia, "Lucida Bright", "DejaVu Serif", Georgia, serif;
        }
    </style>
</head>
<body>
<% if (userFound) { %>
    <h1>We found you account, you will be logged in for this session. </h1>
    <h1>Happy Shopping!</h1>
<% } else { %>
    <h1>We couldn't find any account with the provided Email and Password</h1>
    <h2>Try Creating an account, or sign in with a different Email and Password</h2>
<% } %>

<h2>Redirecting you back to the homepage...</h2>

<script>
    setTimeout(function() {
        window.location.href = '/';
    }, 8000); // 8000 milliseconds = 8 seconds
</script>
</body>
</html>
